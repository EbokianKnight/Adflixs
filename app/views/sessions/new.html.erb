<%= render "shared/form" %>
<%= render "shared/errors" %>
<content class="sign-in-header">
	<a href="/" class="logo"></a>
	<div class="sign-in-pane sign-in-text">
		<h1>Sign In</h1>
		<form class="sign-in-form" action="<%= session_url %>" method="post">
			<%= auth_token %>
			<label for="useremail">Email</label>
			<input class="sign-in-input" id="useremail" type="text" name="user[email]" value="">

			<label for="userpass">Password</label>
			<input class="sign-in-input" id="userpass" type="password" name="user[password]" value="">

			<a class="sign-in-forgot" href="#">Forgot your email or password?</a>
			<p>Remember me on this device.</p>
			<input class="sign-in-button" type="submit" value="Sign In">
			<p> New to Netflix?
				<a href="#">Sign up now</a>.
			</p>
		</form>
	</div>
</content>
